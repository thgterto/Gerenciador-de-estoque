{
  "name": "estoquenode-server",
  "version": "1.0.0",
  "description": "EstoqueNode Corp Portable - Backend",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc",
    "package": "npm run build && pkg . --targets node18-win-x64 --output ../EstoqueNode_Corp.exe"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/static": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.6.0",
    "fastify": "^4.26.2",
    "kysely": "^0.27.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.12.2",
    "pkg": "^5.8.1",
    "typescript": "^5.4.3"
  },
  "bin": "dist/app.js",
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "../dist/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ]
  }
}
